---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" target="_blank" rel="noopener noreferrer" class="float-right">
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if page.cv_pdf %}
      <!-- Embedding the PDF File -->
      <div class="cv-pdf-viewer">
        <iframe src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" style="width:100%; height:1000px; border:none;"></iframe>
      </div>
    {% else %}
      <p>No CV PDF available.</p>
    {% endif %}
  </article>
</div>